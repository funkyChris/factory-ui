<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    
    <ui:style field='loginStyle' src='login.css' type='org.qualipso.factory.ui.core.login.client.LoginPanel.LoginStyle' />
    <ui:image field='logo' src='gwt-logo.png' />

	<g:VerticalPanel>
        <g:Label text='Please log in' ui:field='errorLabel' />
        <g:HorizontalPanel>
			<g:Label text='Login' />
			<g:TextBox ui:field='usernameTextBox' />
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label text='Password' />
			<g:PasswordTextBox ui:field='passwordTextBox'/>
		</g:HorizontalPanel>
        <g:Button text='Login' ui:field='loginButton' />
        <g:HTMLPanel>
            <div class='{loginStyle.logo}' />
        </g:HTMLPanel>
	</g:VerticalPanel>

</ui:UiBinder> 