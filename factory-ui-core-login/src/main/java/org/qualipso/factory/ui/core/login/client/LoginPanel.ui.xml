<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<g:VerticalPanel>
		<g:HorizontalPanel>
			<g:Label text="Login" />
			<g:TextBox ui:field='usernameTextBox' />
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label text="Password" />
			<g:PasswordTextBox ui:field='passwordTextBox'/>
		</g:HorizontalPanel>
        <g:Button text='Login' ui:field='loginButton' />
	</g:VerticalPanel>

</ui:UiBinder> 